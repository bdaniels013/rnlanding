# Payment Cloud Configuration
# Get these from your Payment Cloud merchant account

# Payment Cloud Secret Key (required)
PAYMENT_CLOUD_SECRET_KEY=your_payment_cloud_secret_key_here

# Payment Cloud Public Key (for frontend tokenization)
PAYMENT_CLOUD_PUBLIC_KEY=your_payment_cloud_public_key_here

# Environment (sandbox or production)
PAYMENT_CLOUD_ENVIRONMENT=sandbox

# Hosted Payment Page branding (optional)
HPP_CSS_URL=https://your-cdn.com/nmi-hpp.css
HPP_COMPANY=Rich Nick

# Webhook URL for payment notifications (optional)
PAYMENT_CLOUD_WEBHOOK_URL=https://your-domain.com/api/payment-cloud/webhook

# Apple Pay Configuration (optional)
APPLE_PAY_MERCHANT_ID=your_apple_pay_merchant_id
APPLE_PAY_DOMAIN=your-domain.com

# Google Pay Configuration (optional)
GOOGLE_PAY_MERCHANT_ID=your_google_pay_merchant_id
GOOGLE_PAY_MERCHANT_NAME=Rich Nick Growth LLC
